{{!< main}}
<div class="container-fluid">
    <div class="card" style="max-width: 30rem;">
        <div class="card-header">
            {{#each product.thumbnails}}
                <img src="{{this}}" alt="product-image" class="card-img-top">
            {{/each}}
        </div>
        <div class="card-body">
            <h3>{{product.title}}</h3>
            <p>{{product.description}}</p>
            <h4>${{product.price}}</h4>
            <p>Stock: {{product.stock}}</p>
            <button class="btn btn-primary" onclick="addToCart('{{product._id}}')"><i class="fa-solid fa-cart-plus"></i></button>
        </div>
    </div>
</div>
<script src="../js/index.js"></script>