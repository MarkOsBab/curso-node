<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Eliminar un usuario</h2>
            <form class="d-flex flex-column w-50 gap-3" id="deleteUser">
                <select name="userId" id="userId">
                {{#each users}}
                    <option value="{{this._id}}">{{this.first_name}} {{this.last_name}}</option>
                {{/each}}
                </select>
                <button class="btn btn-danger btn-sm" type="submit">
                    <i class="fa fa-trash"></i> Eliminar
                </button>
            </form>
        </div>
        <div class="col-md-6">
            <h2>Cambiar el rol de un usuario</h2>
            <p><i class="fa-solid fa-triangle-exclamation text-warning"></i> Solo se cambia de rol <b>*user</b> a <b>*premium</b> y viceversa.</p>
            <form class="d-flex flex-column w-50 gap-3" id="changeRole">
                <select name="roleUserId" id="roleUserId">
                    {{#each users}}
                    <option value="{{this._id}}">{{this.first_name}} {{this.last_name}} ({{this.role}})</option>
                    {{/each}}
                </select>
                <button class="btn btn-primary btn-sm" type="submit">
                    <i class="fa fa-user"></i> Cambiar rol
                </button>
            </form>
        </div>
    </div>
</div>

<script src="/js/deleteUser.js"></script>
<script src="/js/changeRole.js"></script>