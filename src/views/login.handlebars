<div class="container-fluid">
  <h1>Login</h1>
  <form id="loginForm">
    <div class="form-group m-2">
      <label class="form-label" for="email">Email</label>
      <input class="form-control" name="email" id="email"/>
    </div>
    <div class="form-group m-2">
      <label class="form-label" for="password">Contraseña</label>
      <input class="form-control" type="password" name="password" id="password"/>
    </div>
    <input class="btn btn-primary btn-lg mt-3" type="submit" value="Iniciar sesión" />
  </form>
  <p>¿No estás registrado? <a href="/register">Regístrate aquí</a></p>
  <div class="d-flex flex-row align-items-center">
    <a href="/api/sessions/github"><button class="btn btn-primary"><i class="fa-brands fa-github"></i></button></a>
  </div>
</div>
<script src="/js/login.js"></script>